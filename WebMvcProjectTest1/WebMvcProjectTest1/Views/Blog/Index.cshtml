@model IEnumerable<Domain.Entity.Blog>



<h1>Blog Sayafasına Hoşgeldiniz</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Blog</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
               Title
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @item.Name
                </td>
                <td>
                   @item.Description
                </td>
                <td>
                   @item.Title
                </td>
                <td>
                    <div class="btn-group " role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-3 ">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning  m-3">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  m-3">Delete</a>
                        
                  </div>

                </td>
                </tr>
        }
        </table>